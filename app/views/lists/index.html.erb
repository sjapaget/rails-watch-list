<div class="banner_home min-vh-75">
  <div class="container">
    <h1>Movie Lister</h1>
    <p>Make your own watchlists</p>
  </div>
</div>
<div class="container bg-secondary bg-gradient mx-auto mt-3 p-4">
  <div class="d-flex justify-content-between">
    <h3 class="text-white">You have <%= pluralize(@lists.size, "list") %></h3>
    <%= link_to "Add a list", new_list_path, class: "btn btn-dark" %>
  </div>

  <div class="row justify-content-center">
    <% @lists.each do |list| %>
    <div class="col-4">
      <div class="card list-card text-white text-center m-2 border border-dark rounded" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.image.key, height: 400, crop: :fit %>')" >
        <div class="card-body">
        <div class="card-title">
          <h5>
            <%= list.name %>
          </h5>
        </div>
        <div class="d-flex justify-content-evenly">
          <%= link_to "See List", list_path(list), class: "btn btn-primary" %>
          <%= link_to list_path(list), data: {turbo_method: :delete, turbo_confirm: "Sure?"}, class: "btn btn-danger text-white" do  %>
          <i class="fa-solid fa-trash"></i>
          <% end %>
        </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
